class Solution {
    public static int traversal(TreeNode root){
        if(root == null){
            return 0;
        }
        int lh = traversal(root.left);
        int rh = traversal(root.right);

        int max = Math.max(lh , rh) + 1;
        return max;
    }
    public int diameterOfBinaryTree(TreeNode root) {
        if (root == null){
            return 0;
        }
        int lh = diameterOfBinaryTree(root.left);
        int rh = diameterOfBinaryTree(root.right);

        int maxdep = traversal(root.left) + traversal (root.right);
        
        return Math.max(maxdep,Math.max(lh , rh));



        

        
        
    }
}
