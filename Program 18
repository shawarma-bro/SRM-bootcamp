public class Solution {
    public ListNode getIntersectionNode(ListNode headA, ListNode headB) {
        ListNode temp = headA;
        ListNode temp1 = headB;
        int c1 = 0;
        int c2 =0;

        while (temp != null){
            temp = temp.next;
            c1++;
        }

        while (temp1 != null){
            temp1 = temp1.next;
            c2++;
        }
        if (c1 < c2){
            return intersection(headA , headB , c2 - c1);
        }
        else{
            return intersection(headB , headA , c1 - c2);
        }}
    private ListNode intersection(ListNode shorter , ListNode longer ,int diff){
            for (int i = 0 ; i < diff ; i++){
                longer = longer.next;
            }
            while (shorter != null && longer != null){
                if (shorter == longer){
                    return longer;
                }
                shorter = shorter.next;
                longer = longer.next;
            }
            return null;
        }


        

        
    }
